{
  "properties": {
    "displayName": "tst",
    "policyType": "Custom",
    "mode": "Indexed",
    "metadata": {
      "version": "1.0.1",
      "category": "App Service",
      "createdBy": "1b9ac6ba-c394-4b16-95b6-7a9dcd8b5fee",
      "createdOn": "2020-04-08T17:24:52.8440611Z",
      "updatedBy": null,
      "updatedOn": null
    },
    "parameters": {
      "effect": {
        "type": "String",
        "metadata": {
          "displayName": "Effect",
          "description": "Enable or disable the execution of the policy"
        },
        "allowedValues": [
          "AuditIfNotExists",
          "Disabled"
        ],
        "defaultValue": "AuditIfNotExists"
      }
    },
    "policyRule": {
      "if": {
        "allOf": [
          {
            "field": "type",
            "equals": "Microsoft.Web/sites"
          },
          {
            "field": "kind",
            "like": "app*"
          }
        ]
      },
      "then": {
        "effect": "[parameters('effect')]",
        "details": {
          "type": "Microsoft.Web/sites/config",
          "name": "web",
          "existenceCondition": {
            "field": "Microsoft.Web/sites/config/siteAuthEnabled",
            "equals": "true"
          }
        }
      }
    }
  },
  "id": "/subscriptions/226eb202-8860-4bd3-baf6-168e3a48bef7/providers/Microsoft.Authorization/policyDefinitions/3bf57ccd-87c9-48b3-9089-372b3ecc675d",
  "type": "Microsoft.Authorization/policyDefinitions",
  "name": "3bf57ccd-87c9-48b3-9089-372b3ecc675d"
}
